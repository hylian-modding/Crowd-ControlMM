{
  "rootDir": "./",
  "outDir": "build",
  "compilerOptions": {
    "rootDir": "./",
    "target": "ESNEXT",
    "module": "commonjs",
    "sourceMap": true,
    "outDir": "./build",
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "@Crowd-Control/*": [
        "./src/Crowd-Control/*"
      ],
      "MajorasMask/*": [
        "libs/MajorasMask/*"
      ]
    }
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts",
    "mods/**/*.ts",
    "cores/**/*.ts",
    "bin/paker.ts"
  ],
  "exclude": [
    "node_modules",
    "API",
    "build.ts",
    "build"
  ]
}